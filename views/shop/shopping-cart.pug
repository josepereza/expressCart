extends ../layout
    
block content
    if (products && products.length != 0)
        .row
            .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
                ul.list-group
                    each product in products 
                        li.list-group-item
                            span.badge=product.qty
                            strong=product.item.title+"  "
                            
                            span.label.label-success="$"+product.price+" "
                            .btn-group
                                button.btn.btn-primary.btn-xs.dropdown-toggle(type="button", data-toggle="dropdown")="Action"
                                    span.caret
                                ul.dropdown-menu
                                    li
                                        a(href="/reduce/"+product.item._id)="Reduce By 1"
                                    li
                                        a(href="/remove/"+product.item._id)="Remove All"             
        .row
            .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
                strong="Total:  $"+ totalPrice
        hr
        .row
            .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
                a.btn.btn-success(type="button", href='/checkout')="Checkout"
    else
        .row
            .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
                h2="No Item in the cart"
